{% extends 'base.html.twig' %}

{% block title %}{% trans %}Doc index{% endtrans %}{% endblock %}

{% block nav %}{% include 'navUser.html.twig' %}{% endblock %}

{% block body %}
    <h1>{% trans %}Doc index{% endtrans %}</h1>
    <table class="table">
        <thead>
            <tr>
                <th>{% trans %}Id{% endtrans %}</th>
                <th>{% trans %}Filename{% endtrans %}</th>
                <th>{% trans %}Owner{% endtrans %}</th>
                <th>{% trans %}Actions{% endtrans %}</th>
            </tr>
        </thead>
        <tbody>
        {% for item in docs %}
            <tr>
                <td>{{ item.doc.id }}</td>
                <td>{{ item.doc.filename }}</td>
                <td>{{ item.doc.owner.email }}</td>
                <td>
	                {{ include('user_doc/_delete_form.html.twig') }}
                    <a class="btn btn-sm btn-primary" href="{{ asset('uploads/files/' ~ item.doc.filename) }}">{% trans %}Download{% endtrans %}</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">{% trans %}No records found{% endtrans %}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
