{% extends 'base.html.twig' %}

{% block title %}{% trans %}Login{% endtrans %}{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	<link rel="stylesheet" href="{{ asset('css/login.css') }}">
{% endblock %}

{% block body %}
    <section id="login">
        <form method="post" class="form-signin">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
        
            <h1 class="h3 mb-3 font-weight-normal">{% trans %}Enter your credentials{% endtrans %}</h1>
            <label for="inputEmail" class="sr-only">{% trans %}Email{% endtrans %}</label>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" placeholder="Email" required autofocus>
            <label for="inputPassword" class="sr-only">{% trans %}Password{% endtrans %}</label>
            <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Password" required>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        {#         Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.#}
        {#         See https://symfony.com/doc/current/security/remember_me.html#}
            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me">{% trans %}Remember me{% endtrans %}
                </label>
            </div>
            <button class="btn btn-lg btn-primary" type="submit">{% trans %}Sign in{% endtrans %}</button>
        	<a class="btn btn-lg btn-secondary" href="{{ path('user_new') }}" role="button">{% trans %}Sign up{% endtrans %}</a>
        </form>
    </section>
{% endblock %}
