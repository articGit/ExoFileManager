{{ form_start(form, {'attr': {'class':'.form-control'}}) }}

	<div class="form-group">
        {{ form_label(form.firstName) }}
        {{ form_errors(form.firstName) }}
        {{ form_widget(form.firstName, {'attr': {'class': 'form-control'}}) }}
        {{ form_help(form.firstName) }}
    </div>
    <div class="form-group">
        {{ form_label(form.lastName) }}
        {{ form_errors(form.lastName) }}
        {{ form_widget(form.lastName, {'attr': {'class': 'form-control'}}) }}
        {{ form_help(form.lastName) }}
    </div>
    <div class="form-group">
        {{ form_label(form.email) }}
        {{ form_errors(form.email) }}
        {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
        {{ form_help(form.email) }}
    </div>
    <div class="form-group">
        {{ form_label(form.password.first) }}
        {{ form_errors(form.password.first) }}
        {{ form_widget(form.password.first, {'attr': {'class': 'form-control'}}) }}
        {{ form_help(form.password.first) }}
	</div>
	<div class="form-group">
        {{ form_label(form.password.second) }}
        {{ form_errors(form.password.second) }}
        {{ form_widget(form.password.second, {'attr': {'class': 'form-control'}}) }}
        {{ form_help(form.password.second) }}
	</div>
	{% if form.roles is defined %}
    	<div class="form-group">
            {{ form_label(form.roles) }}
            {{ form_errors(form.roles) }}
            {{ form_widget(form.roles, {'attr': {'class': 'form-control'}}) }}
            {{ form_help(form.roles) }}
    	</div>
	{% endif %}
	<div>
        <button class="btn btn-lg btn-primary">{% trans %}Save{% endtrans %}</button>
        <a class="btn btn-lg btn-secondary" href="{{ path('user_index') }}">{% trans %}Back{% endtrans %}</a>
    </div>
{{ form_end(form) }}
