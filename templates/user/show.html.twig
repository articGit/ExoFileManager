{% extends 'base.html.twig' %}

{% block title %}{% trans %}User{% endtrans %}{% endblock %}

{% block body %}
    <h1>{% trans %}User{% endtrans %}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>{% trans %}Id{% endtrans %}</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>{% trans %}Email{% endtrans %}</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>{% trans %}Roles{% endtrans %}</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>{% trans %}FirstName{% endtrans %}</th>
                <td>{{ user.firstName }}</td>
            </tr>
            <tr>
                <th>{% trans %}LastName{% endtrans %}</th>
                <td>{{ user.lastName }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-lg btn-secondary" href="{{ path('user_index') }}">{% trans %}Back{% endtrans %}</a>

    <a class="btn btn-lg btn-primary" href="{{ path('user_edit', {'id': user.id}) }}">{% trans %}Edit{% endtrans %}</a>

    {{ include('user/_delete_form.html.twig') }}
{% endblock %}
