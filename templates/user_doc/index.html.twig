{% extends 'base.html.twig' %}

{% block title %}UserDoc index{% endblock %}

{% block body %}
    <h1>UserDoc index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>User</th>
                <th>Doc</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user_doc in user_docs %}
            <tr>
                <td>{{ user_doc.id }}</td>
                <td>{{ user_doc.user }}</td>
                <td>{{ user_doc.doc }}</td>
                <td>
                    <a href="{{ path('user_doc_show', {'id': user_doc.id}) }}">show</a>
                    <a href="{{ path('user_doc_edit', {'id': user_doc.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('user_doc_new') }}">Create new</a>
{% endblock %}
